#include <stdio.h>
#include <stdlib.h>

char *ChargerChaine(int N) {
    char *chaine = (char *)malloc(N * sizeof(char)); // حجز مساحة للـ N حرف

    if (chaine == NULL) {
        printf("Erreur d'allocation de mémoire.\n");
        exit(1);
    }

    printf("Entrez la chaîne : ");
    fgets(chaine, N, stdin); // قراءة السلسلة من المستخدم

    // حذف حرف النهاية '\n' إذا كان موجودًا
    chaine[strcspn(chaine, "\n")] = '\0';

    return chaine;
}

int main() {
    int taille;

    printf("Entrez la taille de la chaîne : ");
    scanf("%d", &taille);

    char *maChaine = ChargerChaine(taille);
    printf("La chaîne entrée est : %s\n", maChaine);

    // تحرير الذاكرة بعد الانتهاء
    free(maChaine);

    return 0;
}
